<script type="text/javascript">
  $(document).ready(function(){
    $(".spoiler").hide();
    $(".punchline").click(function(){
      var parent = $(this).parent();
      parent.find(".spoiler").fadeIn();
      parent.find(".punchline").hide();
    });        
  });
</script>

<h1>Flöde</h1>

<%= link_to 'Ny vits', new_joke_path %>

<% @jokes.each do | joke |%>

<div class="well joke">
  <h2>
    <%= "\"#{joke.buildup}\"" %>
  </h2>
  <br />
  <h2 class="spoiler">
    <hr />
    <%= "\"#{joke.punchline}\"" %>
  </h2>
  <div class="punchline alert alert-info">
    <p>Klicka för punchline</p>
  </div>
</div>

<% end %>